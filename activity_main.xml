<LinearLayout 	    xmlns:android="http://schemas.android.com/apk/res/android" 	    xmlns:app="http://schemas.android.com/apk/res-auto" 	    xmlns:tools="http://schemas.android.com/tools" 	    android:layout_width="match_parent"    android:layout_height="match_parent" 
android:orientation="vertical" 
    
	    android:padding="16dp" 
	    tools:context=".MainActivity">	    
<TextView	        
android:id="@+id/nameofapp" 	        android:layout_width="370dp" 
android:layout_height="200dp"
android:textColor="@color/colorPrimary" 
android:hint="Genetics" 
android:background="@drawable/p"	
android:textStyle="bold"  android:gravity="top|center" 
android:textSize="28sp"	        android:layout_margin="5dp" 
android:inputType="text"
/>  	    
	    <EditText 
android:id="@+id/pass"	        android:layout_width="match_parent"	        android:layout_height="wrap_content" 
	        android:hint="Password" 	        android:layout_margin="10dp" 	        android:inputType="number"/> 	 
<EditText 	        
android:id="@+id/name" 	        android:layout_width="match_parent" 
android:layout_height="wrap_content" 
android:hint="Name" 	        android:layout_margin="5dp" 
android:inputType="text"/>  
	    <LinearLayout 
android:layout_width="match_parent" 
android:layout_height="wrap_content" android:orientation="horizontal"> 
	 
<Button 
android:id="@+id/btn1"             android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:text="Enter"	            android:textSize="20sp" 	            android:layout_weight="1" 	            android:layout_marginTop="20dp"/> 
	 
	        <Button 	            android:id="@+id/btn2" 	            android:layout_width="wrap_content"	            android:layout_height="wrap_content" 
	            android:text="" 	            android:textSize="20sp" 	            android:layout_weight="1" 	            android:layout_marginTop="20dp"/>         
	    </LinearLayout> 	 
	    <LinearLayout         android:layout_width="match_parent"	        android:layout_height="wrap_content" 
	        android:orientation="horizontal"> 	 
	        <Button android:id="@+id/btn3" 	            android:layout_width="wrap_content"	            android:layout_height="wrap_content" android:text="" 	            android:textSize="20sp" 	            android:layout_weight="1" 	            android:layout_marginTop="20dp"/> 	 
	        <Button android:id="@+id/btn4" 	            android:layout_width="wrap_content"	            android:layout_height="wrap_content" 
android:text="" 	            android:textSize="20sp" 	            android:layout_weight="1" 	            android:layout_marginTop="20dp"/> 
</LinearLayout> 	 
	    <Button 
	        android:id="@+id/btn5"	        android:layout_width="match_parent"	        android:layout_height="wrap_content" 
	        android:text="" 	        android:textSize="20sp"	        android:layout_marginTop="20dp"/> 
<TextClock
android:id="@+id/textClock"          android:layout_width="fill_parent"           android:layout_height="wrap_content"           android:layout_marginTop="6dp"
android:format12Hour="yyyy MM-dd-hh:mm:ss: a"          android:gravity="center_horizontal"
android:textSize="16sp"
android:textStyle="bold"/>	        
<ImageView 	        
android:id="@drawable/p" 	        android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_margin="5dp" 
/>
</LinearLayout> 
	 